@model FoodieHub.UI.Models.AddCityViewModel

@{
    ViewData["Title"] = "Add City";
}

<h1 class="mt-3">Add City</h1>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CityImageUrl" class="form-label">City Image URL</label>
        <input asp-for="CityImageUrl" class="form-control" />
        <span asp-validation-for="CityImageUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}